<h3>予定詳細</h3>

<div>
  <ul>
    <li><%= link_to "予定を編集する", [:edit_user] %></li>
    <li><%= link_to "予定一覧に戻る", :users %></li>
  </ul>
</div>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.startdate.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.enddate.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
      <th>終日</th>
    <td><% if @user.allday == true %>
      ○
      <% else %>
    <%  end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.memo %></td>
  </tr>
</table>
